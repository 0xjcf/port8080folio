#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running Biome checks..."

# Run Biome to check code quality and formatting
npx biome check src/

if [ $? -ne 0 ]; then
  echo "❌ Biome found issues! Run 'pnpm run lint:fix' to fix automatically."
  exit 1
fi

echo "✅ Biome checks passed!"

echo "🔍 Checking for non-reactive patterns..."

# Run custom reactive patterns checker
node scripts/check-reactive-patterns.js

if [ $? -ne 0 ]; then
  echo "❌ Non-reactive patterns detected! Please fix before committing."
  echo "📖 See docs/REACTIVE_PATTERNS_AUDIT.md for guidance."
  exit 1
fi

echo "✅ All reactive pattern checks passed!"

# Run TypeScript compiler
echo "🔍 Type checking..."
npx tsc --noEmit

if [ $? -ne 0 ]; then
  echo "❌ TypeScript errors detected!"
  exit 1
fi

echo "✅ All checks passed!" 