{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Reactive-Lint TODO Highlighting",
  "scopeName": "reactive-lint.todo.injection",
  "injectionSelector": "L:source.ts, L:source.js, L:source.tsx, L:source.jsx",
  "patterns": [
    {
      "include": "#reactive-lint-todo-comment"
    }
  ],
  "repository": {
    "reactive-lint-todo-comment": {
      "patterns": [
        {
          "name": "comment.block.documentation.reactive-lint-todo",
          "begin": "(/\\*)\\s*(?=TODO\\s*\\[reactive-lint\\]:)",
          "end": "(\\*/)",
          "beginCaptures": {
            "1": {
              "name": "punctuation.definition.comment.reactive-lint"
            }
          },
          "endCaptures": {
            "1": {
              "name": "punctuation.definition.comment.reactive-lint"
            }
          },
          "patterns": [
            {
              "match": "(TODO\\s*\\[reactive-lint\\]:)(.*)",
              "captures": {
                "1": {
                  "name": "keyword.other.todo.reactive-lint"
                },
                "2": {
                  "name": "comment.block.documentation.reactive-lint-todo"
                }
              }
            }
          ]
        },
        {
          "name": "comment.line.double-slash.reactive-lint-todo",
          "match": "(//\\s*)(TODO\\s*\\[reactive-lint\\]:.*$)",
          "captures": {
            "1": {
              "name": "punctuation.definition.comment.reactive-lint"
            },
            "2": {
              "name": "comment.line.double-slash.reactive-lint-todo"
            }
          }
        }
      ]
    }
  }
}