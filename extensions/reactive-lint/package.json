{
  "name": "@actor-spa/reactive-lint",
  "version": "1.1.0",
  "description": "AST-based linter for reactive patterns in Actor-SPA framework",
  "main": "dist/cli.js",
  "type": "module",
  "bin": {
    "reactive-lint": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsx src/cli.ts",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "check": "pnpm run check:types && pnpm run lint",
    "check:types": "tsc --noEmit",
    "lint": "biome check src/",
    "lint:fix": "biome check --apply src/",
    "format": "biome format --write src/",
    "clean": "rm -rf dist/",
    "prepublishOnly": "pnpm run clean && pnpm run check && pnpm run build"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "config.yaml"
  ],
  "keywords": [
    "linter",
    "ast",
    "reactive",
    "actor-spa",
    "static-analysis",
    "template-literals",
    "xstate"
  ],
  "author": "Jose Flores",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "ts-morph": "^21.0.1",
    "globby": "^14.0.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "yaml": "^2.3.4",
    "xstate": "^5.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@types/node": "^20.0.0",
    "@vitest/ui": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/port8080folio.git",
    "directory": "extensions/reactive-lint"
  },
  "bugs": {
    "url": "https://github.com/your-org/port8080folio/issues"
  },
  "homepage": "https://github.com/your-org/port8080folio/tree/main/extensions/reactive-lint"
}
