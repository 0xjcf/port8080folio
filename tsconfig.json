{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": false,
        "strict": true,
        "noEmit": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2022"
        ],
        "types": [
            "node"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@/components/*": [
                "src/components/*"
            ],
            "@/styles/*": [
                "src/styles/*"
            ],
            "@/scripts/*": [
                "src/scripts/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "*.js",
        "*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "public"
    ]
}