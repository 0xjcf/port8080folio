{
  "name": "port8080folio-landing",
  "version": "1.0.0",
  "description": "Jose Flores - Technical Advisor Landing Page",
  "type": "module",
  "scripts": {
    "dev": "serve src -l 8080",
    "serve:dist": "serve dist -l 8080",
    "dev:worker": "wrangler dev",
    "deploy:worker": "wrangler deploy",
    "format": "biome format --write src/",
    "lint": "biome lint --write src/",
    "check": "biome check --write src/",
    "check:ci": "biome check src/",
    "typecheck": "tsc --noEmit",
    "typecheck:app": "tsc --noEmit -p tsconfig.app.json",
    "typecheck:workers": "tsc --noEmit -p tsconfig.workers.json",
    "typecheck:tests": "tsc --noEmit -p tsconfig.tests.json",
    "lint:all": "npm run check && npm run typecheck",
    "clean": "rm -rf dist",
    "copy:html": "node scripts/build-replace-vars.js dev",
    "copy:html:prod": "node scripts/build-replace-vars.js production",
    "copy:html:check": "node scripts/build-replace-vars.js dev --dry-run",
    "copy:html:check:prod": "node scripts/build-replace-vars.js production --dry-run",
    "copy:assets": "mkdir -p dist/assets && cp -r src/assets/* dist/assets/ 2>/dev/null || true",
    "build:js": "mkdir -p dist/scripts && esbuild src/scripts/pe.js --minify --format=iife --target=es2017 --outfile=dist/scripts/pe-min.js",
    "build:css": "mkdir -p dist/styles && lightningcss --minify --bundle --targets '>= 0.25%' src/styles/main.css -o dist/styles/main.css",
    "build:html": "npx html-minifier-terser --input-dir dist --output-dir dist --file-ext html --collapse-whitespace --remove-comments --minify-css true --minify-js true",
    "build": "npm run clean && mkdir -p dist && npm run copy:html && npm run copy:assets && npm run build:css && npm run build:js && npm run build:html",
    "build:prod": "npm run clean && mkdir -p dist && npm run copy:html:prod && npm run copy:assets && npm run build:css && npm run build:js && npm run build:html",
    "watch:css": "mkdir -p dist/styles && lightningcss --bundle --targets '>= 0.25%' --watch --sourcemap src/styles/main.css -o dist/styles/main.css",
    "test": "vitest",
    "test:dom": "vitest --config vitest.config.dom.ts",
    "test:workers": "vitest --config vitest.config.workers.ts",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:lighthouse": "lighthouse http://localhost:8080 --output=json,html --output-path=./lighthouse-report --preset=perf --view",
    "test:fouc": "lighthouse http://localhost:8080 --output=json --output-path=./fouc-test --only-categories=performance --throttling.cpuSlowdownMultiplier=6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@cloudflare/vitest-pool-workers": "^0.8.67",
    "@cloudflare/workers-types": "^4.20250826.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.3.0",
    "esbuild": "^0.25.0",
    "html-minifier-terser": "^7.2.0",
    "jsdom": "^26.1.0",
    "lightningcss-cli": "^1.30.1",
    "serve": "^14.2.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "vitest-axe": "^0.1.0",
    "wrangler": "^4.32.0"
  },
  "engines": {
    "node": ">=18.17",
    "npm": ">=9"
  },
  "keywords": [
    "portfolio",
    "landing-page",
    "static-site"
  ],
  "author": "Jose Flores",
  "license": "MIT"
}
